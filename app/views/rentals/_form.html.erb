<%= render 'shared/errors', object: @rental %>
<%= form_with model: @rental, local: true do |f| %>
  <div class="container mt-4">
    <div class="row mb-3">
      <div class="col-md-6">
        <%= f.label :car_id, "Car", class: 'form-label' %>
        <%= f.collection_select :car_id, @cars, :id, :brand, prompt: "Select a car", class: 'form-select' %>
      </div>
      <div class="col-md-6">
        <%= f.label :user_id, "User", class: 'form-label' %>
        <%= f.collection_select :user_id, @users, :id, :name, prompt: "Select a user", class: 'form-select' %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-md-6">
        <%= f.label :start_date, class: 'form-label' %>
        <%= f.date_field :start_date, class: 'form-control' %>
      </div>
      <div class="col-md-6">
        <%= f.label :end_date, class: 'form-label' %>
        <%= f.date_field :end_date, class: 'form-control' %>
      </div>
    </div>

    <div class="mb-3">
      <%= f.label :total_price, "Total Price (calculated)", class: 'form-label' %>
      <%= f.text_field :total_price, class: 'form-control', readonly: true, value: @rental.total_price %>
    </div>

    <div class="mb-3">
      <%= f.submit "Save", class: 'btn btn-primary' %>
      <%= link_to 'Cancel', rentals_path, class: 'btn btn-secondary' %>
    </div>
  </div>
<% end %>
