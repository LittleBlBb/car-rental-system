<h1>Rentals</h1>

<%= link_to 'New Rental', new_rental_path %>

<table>
  <thead>
  <tr>
    <th>Car</th>
    <th>User</th>
    <th>Start Date</th>
    <th>End Date</th>
    <th>Total Price</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @rentals.each do |rental| %>
    <tr>
      <td><%= rental.car.brand %></td>
      <td><%= rental.user.name %></td>
      <td><%= rental.start_date %></td>
      <td><%= rental.end_date %></td>
      <td><%= number_to_currency(rental.total_price) %></td>
      <td>
        <%= button_to 'Show', rental_path(rental), method: :get %>
        <%= button_to 'Edit', edit_rental_path(rental), method: :get %>
        <%= button_to 'Delete', rental_path(rental), method: :delete %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
