<%= render 'shared/errors', object: @car %>
<%= form_with model: @car, local: true do |f| %>
  <div class="container mt-4">
    <div class="row mb-3">
      <div class="col-md-6">
        <%= f.label :brand, class: 'form-label' %>
        <%= f.text_field :brand, class: 'form-control', placeholder: 'Toyota' %>
      </div>
      <div class="col-md-6">
        <%= f.label :model, class: 'form-label' %>
        <%= f.text_field :model, class: 'form-control', placeholder: 'Corolla' %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-md-6">
        <%= f.label :price_per_day, class: 'form-label' %>
        <%= f.number_field :price_per_day, class: 'form-control', placeholder: '50' %>
      </div>
      <div class="col-md-6">
        <%= f.label :year, class: 'form-label' %>
        <%= f.number_field :year, class: 'form-control', placeholder: '2020' %>
      </div>
    </div>

    <div class="mb-3">
      <%= f.label :location_id, "Location", class: 'form-label' %>
      <%= f.collection_select :location_id, @locations, :id, :city, prompt: "Select a location", class: 'form-select' %>
    </div>

    <div class="mb-3">
      <%= f.submit "Save", class: 'btn btn-primary' %>
      <%= link_to 'Cancel', cars_path, class: 'btn btn-secondary' %>
    </div>
  </div>
<% end %>
