<%= render 'shared/errors', object: @car %>

<%= form_with(model: @car, local: true) do |form| %>

  <div>
    <%= form.label :brand %>
    <%= form.text_field :brand %>
  </div>

  <div>
    <%= form.label :model %>
    <%= form.text_field :model %>
  </div>

  <div>
    <%= form.label :year %>
    <%= form.number_field :year %>
  </div>

  <div>
    <%= form.label :price_per_day %>
    <%= form.number_field :price_per_day, step: 0.01 %>
  </div>

  <div>
    <%= form.label :location_id, "Location" %>
    <%= form.collection_select :location_id, @locations, :id, :city, prompt: "Select a location" %>
  </div>

  <%= form.submit %>
<% end %>

<%= link_to 'Back', cars_path %>
