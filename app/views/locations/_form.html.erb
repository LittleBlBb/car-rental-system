<%= render 'shared/errors', object: @location %>
<%= form_with model: @location do |f| %>
  <div class="mb-3 row">
    <%= f.label :city, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.text_field :city, class: 'form-control', minlength: 2, placeholder: 'Moscow' %>
    </div>
  </div>

  <div class="mb-3 row">
    <%= f.label :address, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.text_field :address, class: 'form-control', minlength: 5, placeholder: 'Krasnaya 123' %>
    </div>
  </div>

  <%= f.submit "Submit", class: 'btn btn-primary' %>
<% end %>

<%= link_to 'Back', locations_path, class: 'btn btn-secondary' %>